<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000">

    <!-- Center Play/Pause Controls -->
    <ImageButton
            android:id="@+id/exo_play"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/exo_icon_play"
            android:tint="@android:color/white"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"/>

    <ImageButton
            android:id="@+id/exo_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/exo_icon_pause"
            android:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"/>

    <!-- Volume Slider -->
    <com.google.android.material.slider.Slider
            android:id="@+id/volume_slider"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            android:value="50"
            app:thumbColor="@android:color/white"
            app:trackColorActive="@android:color/white"
            app:trackColorInactive="#80FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/bottom_controls"
            app:layout_constraintStart_toStartOf="@+id/bottom_controls"
            android:layout_marginStart="16dp"/>

    <!-- Bottom Controls Row -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_controls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- Volume Button -->
        <ImageButton
                android:id="@+id/volume_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_volume_up_24"
                android:tint="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Current Time -->
        <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/volume_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/volume_button"
                android:layout_marginStart="16dp"/>

        <!-- Progress Bar -->
        <SeekBar
                android:id="@+id/progress_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progress="0"
                android:max="100"
                app:layout_constraintStart_toEndOf="@id/current_time"
                app:layout_constraintEnd_toStartOf="@id/total_time"
                app:layout_constraintBottom_toBottomOf="@id/volume_button"
                app:layout_constraintTop_toTopOf="@id/volume_button"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

        <!-- Total Time -->
        <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/progress_bar"
                app:layout_constraintEnd_toStartOf="@id/exo_minimal_fullscreen"
                app:layout_constraintBottom_toBottomOf="@id/volume_button"
                app:layout_constraintTop_toTopOf="@id/volume_button"
                android:layout_marginEnd="16dp"/>

        <!-- Fullscreen Button -->
        <ImageButton
                android:id="@+id/exo_minimal_fullscreen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/fullscreen"
                android:tint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/volume_button"
                app:layout_constraintTop_toTopOf="@id/volume_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>